<Window x:Class="InterventionalCostings.CustomViews.GetUserPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterventionalCostings.CustomViews"
        mc:Ignorable="d"
        Title="GetUserPassword"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Enter Your Email Password:" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="passwordText" HorizontalAlignment="Left" Margin="20,41,20,10" VerticalAlignment="Top" RenderTransformOrigin="-7.2,-2.95" Width="229" KeyUp="EnterButtonPressed"/>
        <Button Content="Submit" Click="SendPassword" HorizontalAlignment="Left" Margin="174,76,0,10" VerticalAlignment="Top" Width="75"/>


    </Grid>
</Window>
