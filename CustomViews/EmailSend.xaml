<Window x:Class="InterventionalCostings.CustomViews.EmailSend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterventionalCostings.CustomViews"
        mc:Ignorable="d"
        Title="EmailSend"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"        
        Background="LightGray">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="emailSending" gif:ImageBehavior.AnimatedSource="/Images/emailSendBusy.gif" Width="128" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,5,30,5"/>
            <Label x:Name="emailStatusText" Width="auto" VerticalAlignment="Center" Content="Sending Email. Please Wait..." Margin="0,0,10,0"/>

        </StackPanel>

        <Button Content="Close" Height="30" Width="80" Padding="5,5,5,5" Margin="0,0,10,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="CloseWindow"/>

    </Grid>

</Window>
